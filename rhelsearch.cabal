name:                rhelsearch
version:             0.1.0.0
synopsis:            A small CLI tool to search for RHEL packages
-- description:
homepage:            https://github.com/relrod/rhelsearch
license:             BSD2
license-file:        LICENSE
author:              Ricky Elrod
maintainer:          relrod@redhat.com
copyright:           (c) 2015 Red Hat, Inc.
category:            System
build-type:          Simple
-- extra-source-files:
cabal-version:       >=1.10

executable rhelsearch
  main-is:             Main.hs
  -- other-modules:
  -- other-extensions:
  build-depends:       base >= 4 && < 5
                     , aeson
                     , bytestring
                     , wreq
                     , lens
                     , lens-aeson
                     , time
                     , friendly-time
                     , directory
                     , optparse-applicative
                     , text
                     , containers
  hs-source-dirs:      src
  default-language:    Haskell2010
